<% logged_user = User.find(session[:user_id]) %>
<h3>PROFILE FOR : <%= logged_user.username%></h3>
<p>
  <% total = 0 %>
  <% logged_user.photos.each do |photo| %>
    <% total += photo[:rating] %>
  <% end %>
  total number of stars: <%=total%>
</p>
<form method="post" action="/addYOusername">
  YO Username: <small><%=logged_user.yo_username%></small>
  <div>
  <input type="text" name="YOname" >
  </div>
  <button type='submit'>save YO username</button>
</form>

