<h1>creepr main page<h1>

<p> 
<%@tags && @tags.each do |tag|%>
  <%= tag.name %>

  <small><a href="/photos/tag/<%=(@tags.map(&:name) - [tag.name]).join(',')%>"> remove        .</a></small>
<% end %>
</p>


<!-- MAIN PHOTO DISPLAY -->

<div class="container">
  <% @photos.each_slice(3).to_a.each do |photo_row| %>
    <div class="row borderz">
    <% photo_row.each do |photo| %>
     <div class="col-xs-8 col-sm-4">
      <a href='/photos/<%= photo.id %>'><img src="/uploads/<%= photo.filename%>" class="img-responsive img-thumbnail" alt="Responsive image"/></a>
    </div>
    <% end %>
  </div>
 <% end %>
</div>





