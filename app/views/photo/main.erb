<h1>creepr main page<h1>

<div>
<a href='/photos/new'>Add a photo</a>
</div>
<div>
<a href='/photos/tag/:id'>Tag Specific Page!</a>
</div>

<form method="get" action="/photos/tag">
	Enter tags here
  <input type="text" name="tag">
  <input type="submit" value="filter" >
</form>
<%=@tag.name%>
<p>

	<% @photos.each do |photo| %>
		<small><%=photo.filename%></small>
		<a href='/photos/<%= photo.id %>'><img src="/uploads/<%= photo.filename%>" width="100" height="100"/></a>
	<% end %>
</p>