<!-- STUFF FOR USERS -->
<% if session[:user_id] %>
  <%logged_user = User.find(session[:user_id]).username%>
  <small>logged in as <a href="/profile/<%=logged_user%>"><%=logged_user%></a></small>
  <small><a href="/logout">Logout</a></small>
<% end %>
<small>
<a href="/login"> Login </a>
<a href="/signup"> Signup </a>

</small>
<!-- END STUFF FOR USERS -->


<p> 
<%@tags && @tags.each do |tag|%>
  <%= tag.name %>

  <small><a href="/photos/tag/<%=(@tags.map(&:name) - [tag.name]).join(',')%>">remove.</a></small>

  <%if session[:user_id] %>
  <small><form method="post" action="/subscribe"><input type="hidden" name="tagid" value="<%=tag.id%>">
  <button type='submit' >subscribe</button></small>
  <% end %>

<% end %>
</p>


<!-- MAIN PHOTO DISPLAY -->

<div class="container">
  <% @photos.each_slice(3).to_a.each do |photo_row| %>
    <div class="row borderz">
    <% photo_row.each do |photo| %>
     <div class="col-xs-12 col-sm-6 col-md-4">
      <a href='/photos/<%= photo.id %>' style='background-image: url(/uploads/<%= photo.filename%>);' class="thumb img-responsive img-thumbnail" alt="Responsive image"/></a>
      <div class='row'>
      <div class='rating-text'>rating</div>
        <div class='comment-text'>     
          <% if photo.most_recent_comment %>
            <%= photo.most_recent_comment.body %> 
          <% end %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
 <% end %>
</div>


